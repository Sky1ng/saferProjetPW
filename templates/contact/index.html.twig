{% extends 'base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('style/contact.css') }}" />
{% endblock %}

{% block title %}
  Hello ContactController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
    18px/1.5 sans-serif; }

    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
  </style>
  <h2>
    Me contacter
  </h2>
  <p>
    Veuillez indiquer les critères d’un bien que vous cherchez. Dès la mise en
    ligne d’un bien correspondant à vos critères, nous vous contacterons !
  </p>
  <h2>
    Mes critères
  </h2>
  <div class="contactForm">
    {{ form_widget(form.prix) }}
    {{ form_widget(form.localisation) }}
    {{ form_widget(form.surface) }}
    {{ form_widget(form.categorie) }}
    {{ form_widget(form.keyword) }}
    <div>
      {{ form_widget(form.email) }}
      {{ form_widget(form.save) }}
    </div>
  </div>
{% endblock %}
