{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div style="display: flex; flex-direction: column; justify-content: center; width: 35%; margin: auto">

    <h1>S'enregistrer</h1>

    {{ form_start(registrationForm) }}
        {% if registrationForm.vars.errors|length > 0 %}
            <div class="alert alert-danger">
                {{ form_errors(form.username) }}
                {{ form_errors(form.email) }}
                {{ form_errors(form.password) }}
                {{ form_errors(form.passwordConfirm) }}
                {{ form_errors(form.invalid_message) }}

            </div>
        {% endif %}
    <div class="form-group">
        <div class="form-floating mb-3">
            {{ form_row(registrationForm.email,{'attr': {'class': 'form-control', 'placeholder': 'name@example.com'},'type':'email'}) }}


        </div>
        <div class="form-floating">
            {{ form_row(registrationForm.password,{'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'},'type':'password'}) }}

        </div>
    </div>
<br>
        {{ form_row(registrationForm.agreeTerms) }}
<br>
    <button type="submit" class="btn btn-primary">Cr√©er un compte</button>
        <br>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
